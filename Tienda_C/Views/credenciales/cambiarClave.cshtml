@model Tienda_C.dto.UsuarioDTO
@{
    ViewData["Title"] = "Cambiar contraseña";

    // Obtener el valor del token de la URL
    var token = ViewData["UsuarioDto_token"] as string;
}



<div class="pt-5 pb-5 mt-0 align-items-center d-flex">
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center d-flex-row text-center h-100">

            <div class="col-xl-4 col-lg-5 col-md-6 col-sm-6 col-9">
                <div class="card shadow">
                    <div class="card-body">
                        <h1>@token</h1>
                        <h4 class="card-title mt-0 text-center mb-4">Cambiar Contraseña</h4>

                        <form method="post" asp-action="CambiarClave" asp-controller="credenciales">

                            <input type="hidden" asp-for="token_recuperacion" value="@token" />

                            <div class="form-group input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Contraseña:</span>
                                </div>
                                <input name="clv_usuario" id="clave" oninput="revisarContraseña()" class="form-control" placeholder="Contraseña" type="password" required>
                            </div>
                            
                            <div class="form-group input-group mb-3">
                                 <div class="input-group-prepend">
                                    <span class="input-group-text">Contraseña:</span>
                                 </div>
                                 <input id="clave2" oninput="revisarContraseña()" class="form-control" placeholder="Repetir Contraseña" type="password" required>
                            </div>
                            
                            <div class="text-center" id="mensajeClave"></div>

                            <div class="mt-3 form-group d-grid">
                                <button id="boton" type="submit" class="btn btn-primary btn-block"> Cambiar Contraseña </button>
                            </div>

                        </form>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>